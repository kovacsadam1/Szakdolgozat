<h1 class="pt-5 text-center pb-5">
    <%= title %> 
</h1>

<table class="table">
    <thead>
      <tr>
        <th scope="col">
            ID
        </th>
        <th scope="col">
            Állat neve
        </th>
        <th scope="col">
            Állat Fajtája
        </th>
        <th scope="col">
            Email cím
        </th>
        <th scope="col">
            Telefonszám
        </th>
        <th scope="col">
            Irányítószám
        </th>
        <th scope="col">
            Település
        </th>
        <th scope="col">
            Utca
        </th>
        <th scope="col">
            Házszám
        </th>
        <th scope="col">
            Törlés
        </th>
      </tr>
    </thead>
    <tbody>

    <% rendelesek.forEach(rendeles => { %>
    
        <tr>
        <th scope="row">
            <%= rendeles.rendeles_id %> 
        </th>
        <td>
            <%= rendeles.allat_nev %>
        </td>
        <td>
            <%= rendeles.fajta_nev %>
        </td>
        <td>
            <%= rendeles.email %>
        </td>
        <td>
            <%= rendeles.telefonszam %>
        </td>
        <td>
            <%= rendeles.zip %>
        </td>
        <td>
            <%= rendeles.telepules %>
        </td>
        <td>
            <%= rendeles.utca %>
        </td>
        <td>
            <%= rendeles.hazszam %>
        </td>
        <td>
            <form 
                method="post" 
                action="/rendelesek/<%= rendeles.rendeles_id %>" 
            >
            <button
                type="submit"
                class="btn btn-outline-danger"
            >
                <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    width="18" 
                    height="18" 
                    fill="currentColor" 
                    class="bi bi-trash" 
                    viewBox="0 0 16 16"
                >
                    <path 
                        d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"
                    />
                    <path 
                        fill-rule="evenodd" 
                        d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"
                    />
                </svg>
            </button> 
        </form>
        </td>
        </tr>

    <% }) %>
          
    </tbody>
</table>
